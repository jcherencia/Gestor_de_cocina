{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Productos list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Slug</th>
                <th>Precio</th>
                <th>Unidadcompra</th>
                <th>Unidad</th>
                <th>Stock</th>
                <th>Stockmin</th>
                <th>Foto</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('almacen_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.slug }}</td>
                <td>{{ entity.precio }}</td>
                <td>{{ entity.unidadCompra }}</td>
                <td>{{ entity.unidad }}</td>
                <td>{{ entity.stock }}</td>
                <td>{{ entity.stockMin }}</td>
                <td>{{ entity.foto }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('almacen_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('almacen_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('almacen_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
