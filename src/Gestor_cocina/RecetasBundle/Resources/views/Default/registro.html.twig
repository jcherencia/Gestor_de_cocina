{% extends '::base.html.twig' %}

	{% block title %}Inicio - Gestor de cocina {% endblock %}
	{% block stylesheet %} 
		{{ parent() }}
		<link type='text/css' rel='stylesheet' href="{{ asset('public/css/login.css') }}">
		<link type='text/css' rel='stylesheet' href="{{ asset('public/css/jasny-bootstrap.css') }}">
		
	{% endblock %}
	{% block body %}

<div class="fondo">
	<div class="container">
		<div class="login">
			<h1>Registro - Gestor de Cocina</h1>
			{# <form role="form" class="form-horizontal" enctype="multipart/form-data" action="{{ path('crear_usuario') }}" method="POST"> #}
			<form id="form-registro" class="form-horizontal" method ="POST"  enctype="multipart/form-data" action="{{path('crear_usuario')}}">
				<div class="form-group">
					<label for="" class="col-md-3 control-label">Foto</label>
					<div class="col-md-6">
						<div class="fileinput fileinput-new" data-provides="fileinput">
						  <div class="fileinput-new thumbnail" style="width: 200px; height: 150px;">
						    <img alt="Pulsa para Subir tu foto"  src="{{ asset('public/img/no_user2.png') }}"  >
						  </div>
						  <div class="fileinput-preview fileinput-exists thumbnail" style="max-width: 200px; max-height: 150px;"></div>
						  <div>
						    <span class="btn btn-primary btn-file"><span class="fileinput-new">Selecciona imagen</span>
						    <span class="fileinput-exists">Cambiar foto</span>
						    <input type="file" name="img"/> </span>
						    <a href="#" class="btn btn-danger fileinput-exists" data-dismiss="fileinput">Eliminar</a>
						  </div>
						</div> 
					</div>
				
					{% if message is defined%}
						<div class="col-md-12">
							<span>{{message}}</span>
						</div>
					{% endif %}
				</div>
				<div class="form-group">
					<label for="" class="col-md-3 control-label">Nombre</label>
					<div class="col-md-6">
						<input type="text" name="nombre" placeholder="Nombre" class="form-control">
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-md-3 control-label">Apellidos</label>
					<div class="col-md-6">
						<input type="text" name="apellidos" placeholder="Apellidos" class="form-control">
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-md-3 control-label">Usuario</label>
					<div class="col-md-6">
						<input type="text" name="usuario" placeholder="Usuario" class="form-control">
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-md-3 control-label">Contraseña</label>
					<div class="col-md-6">
						<input type="password" id="pass" name="pass" placeholder="Contraseña" class="form-control">
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-md-3 control-label">Repita Contraseña</label>
					<div class="col-md-6">
						<input type="password" id="repeat_pass" name="repeat_pass" placeholder="Contraseña" class="form-control">
					</div>
				</div>
				<div class="form-group">
					<label for="" class="col-md-3 control-label">Email</label>
					<div class="col-md-6">
						<input type="email" name="email" placeholder="Email" class="form-control">
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-3 col-sm-6">
						<button type="submit" class="btn btn-success col-md-12">Registrarse</button>
					</div>
				</div>
				<div class="form-group">

					<div class="col-md-offset-3 col-sm-6">
						<a href="{{ path('login') }}" class="btn btn-primary complement-1-b col-md-12">
							<span class="glyphicon glyphicon-log-in"></span>
							<span>  Volver al login</span>
						</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
